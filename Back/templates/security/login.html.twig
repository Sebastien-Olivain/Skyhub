{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<section class="vh-100">
	<body class="text-center">
    
<main class="form-signin w-100 m-auto">
					<form action="{{ path('app_login') }}" method="post">
          <img class="mb-4" src="{{ asset('favicon.png')}}" alt="Logo Skyhub" width="160" height="140">
						<h1 class="h3 mb-3 fw-normal">Connexion</h1>

						{% if error %}
							<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
						<!-- Email input -->
						<div class="form-floating">
							<input type="text" class="form-control" id="floatingInput" name="_username" value="{{ last_username }}"/>
							<label class="form-label" for="floatingInput">Email</label>
						</div>

						<!-- Password input -->
						<div class="form-floating">
							<input type="password" class="form-control" id="floatingPassword" name="_password"/>
							<label class="form-label" for="floatingPassword">Mot de passe</label>
						</div>

						<!-- Submit button -->
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button class="w-100 btn btn-lg btn-primary" type="submit">Connexion</button>

					</form>
				</div>
			</div>
		</div>
	</section>

{% endblock %}