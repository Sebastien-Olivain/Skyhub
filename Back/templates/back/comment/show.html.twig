{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
<div class="main-wrapper">
    <h1 class="bi bi-rocket-takeoff"> Commentaire de {{ comment.redact }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Publié le </th>
                <td>{{ comment.publishedAt ? comment.publishedAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Rédigé par</th>
                <td>{{ comment.redact }}</td>
            </tr>
            <tr>
                <th>Session concernée</th>
                <td>{{ comment.has }}</td>
            </tr>
        </tbody>
    </table>
    <div class="bouton">
    <a href="{{ path('app_back_comment_index') }}"class="btn btn-info">Retour à la liste</a>

    <a href="{{ path('app_back_comment_edit', {'id': comment.id}) }}"class=" btn btn-primary">Modifier</a>

    {{ include('back/comment/_delete_form.html.twig') }}
</div>
    </div>

{% endblock %}
