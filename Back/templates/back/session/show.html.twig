{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
<div class="main-wrapper">
    <h1 class="bi bi-calendar3"> {{ session.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ session.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ session.date ? session.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ session.city }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ session.region }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ session.slug }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ session.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ session.picture }}" height="90"></td>
            </tr>
        </tbody>
    </table>
    <div class="bouton">
    <a href="{{ path('app_back_session_index') }} "class="btn btn-info">Retour Ã  la liste</a>
     <a href="{{ path('app_back_session_edit', {'id': session.id}) }}" class="btn btn-primary">Modifier</a> 
    
    

    {{ include('back/session/_delete_form.html.twig') }}
</div>
    </div>
{% endblock %}
