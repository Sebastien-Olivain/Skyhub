{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<div class="main-wrapper">
    <h1 class="bi bi-stars"> {{ post.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            {# <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr> #}
            <tr>
                <th>Contenu</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Publié le </th>
                <td>{{ post.publishedAt ? post.publishedAt|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ post.type }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ post.picture }}" height="90"></td>
            </tr>
        </tbody>
    </table>
    <div class="bouton">
    <a href="{{ path('app_back_post_index') }}"class="btn btn-info">Retour à la liste</a>

    <a href="{{ path('app_back_post_edit', {'id': post.id}) }}"class=" btn btn-primary">Modifier</a>

    {{ include('back/post/_delete_form.html.twig') }}
</div>
    </div>

{% endblock %}
